<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pizzaria DH <%= title %></title>
</head>
<body>
  <form action="/pizzas" method="POST">
    <label for="sabor">Sabor</label>
    <input type="text" id="sabor" name="sabor">
    
    <label for="categoria">Categoria</label>
    <select name="categoria" id="categoria">
      <option selected disable">Selecione uma categoria</option>

      <% categorias.forEach(categoria => { %>
        <option value="<%= categoria.id %>"><% categoria.nome %></option>
      
      <% }) %>

      <option selected disabled>Selecione uma categoria</option>
      <option value="1">Doce</option>
      <option value="2">Salgada</option>
      <option value="3">Vegetariana</option>
    </select>
    <input type="text" id="categoria" name="categoria">

    <label for="preco">Pre√ßo</label>
    <input type="number" id="preco" name="preco" step="0.010">

    <button type="submit">Enviar</button>
  </form>
</body>
</html>